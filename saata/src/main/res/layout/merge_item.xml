<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_height="100dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/audio_list_item_bg" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/list_icon"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:scaleType="center">

        <ImageView
            android:id="@+id/iv_up"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/merge_up" />

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/merge_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_toLeftOf="@id/ll_more"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="audio_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/whiteAlpha30"
                android:text="audio_size" />

            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/whiteAlpha30"
                android:text="audio_time" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>